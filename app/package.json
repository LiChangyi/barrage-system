{
  "name": "barrage-system",
  "version": "0.0.1",
  "main": "./dist/main.js",
  "homepage":".",
  "private": true,
  "scripts": {
    "start": "npm run dev",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run dev:renderer\" \"wait-on http://127.0.0.1:8080 && npm run dev:main\"",
    "dev:renderer": "webpack-dev-server --config ./webpack/webpack.dev.js",
    "dev:main": "concurrently \"webpack --config ./webpack/webpack.main.js -w\" \"nodemon --watch ./dist/main.js --exec 'electron .'\"",
    "build": "cross-env NODE_ENV=production concurrently \"npm run build:renderer\" \"npm run build:main\"",
    "build:renderer": "webpack --config ./webpack/webpack.prod.js",
    "build:main": "webpack --config ./webpack/webpack.main.js",
    "eslint": "eslint --ext .js,jsx src",
    "conventional": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "pack:win": "electron-builder -w --publish never -c ./builderConfig/win.json",
    "pack:mac": "electron-builder -m --publish never -c ./builderConfig/mac.json",
    "pack:linux": "electron-builder -l --publish never -c ./builderConfig/linux.json"
  },
  "keywords": [],
  "author": "李昌义",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "antd": "^4.0.1",
    "axios": "^0.19.2",
    "dayjs": "^1.8.23",
    "echarts": "^4.7.0",
    "immutable": "^4.0.0-rc.12",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "prop-types": "^15.7.2",
    "react": "^16.13.0",
    "react-dom": "^16.12.0",
    "react-hot-loader": "^4.12.18",
    "react-loadable": "^5.5.0",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "@babel/core": "^7.7.5",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/preset-env": "^7.7.6",
    "@babel/preset-react": "^7.7.4",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@hot-loader/react-dom": "^16.11.0",
    "autoprefixer": "^9.7.3",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-import": "^1.13.0",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^5.0.1",
    "conventional-changelog-cli": "^2.0.28",
    "copy-webpack-plugin": "^5.1.0",
    "cross-env": "^6.0.3",
    "css-loader": "^3.3.0",
    "electron": "^6.0.12",
    "electron-builder": "^22.4.1",
    "electron-store": "^5.1.0",
    "eslint": "^6.7.2",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.17.0",
    "file-loader": "^5.0.2",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.13.0",
    "nodemon": "^2.0.2",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^8.0.0",
    "sass-resources-loader": "^2.0.1",
    "style-loader": "^1.0.1",
    "url-loader": "^3.0.0",
    "wait-on": "^3.3.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0",
    "webpack-merge": "^4.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,vue}": [
      "npm run eslint",
      "git add"
    ]
  }
}
